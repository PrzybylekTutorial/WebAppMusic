{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/test.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/music-test.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/music/genres.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/music/artists.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/music/search.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/env-check.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/test-simple",
      "destination": "/api/test.js"
    },
    {
      "source": "/api/music-test",
      "destination": "/api/music-test.js"
    },
    {
      "source": "/api/env-check",
      "destination": "/api/env-check.js"
    },
    {
      "source": "/api/music/genres",
      "destination": "/api/music/genres.js"
    },
    {
      "source": "/api/music/artists",
      "destination": "/api/music/artists.js"
    },
    {
      "source": "/api/music/search",
      "destination": "/api/music/search.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CI": "false"
  }
} 